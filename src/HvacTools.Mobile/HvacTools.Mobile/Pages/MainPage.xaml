             xmlns:local="clr-namespace:HvacTools.Mobile"
             x:Class="HvacTools.Mobile.MainPage">

    <StackLayout
        HorizontalOptions="Fill"
        VerticalOptions="Fill"
        Padding="20,20,20,20">

        <Label Text="HVAC TOOLS" 
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="Center"
           TextColor="Navy"
            FontSize="Large"/>

        <Button
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center"
            Text="Start"
            Font="Large">
        </Button>
    </StackLayout>
    
</ContentPage>