<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HvacTools.Mobile;assembly=HvacTools.Mobile"
             x:Class="HvacTools.Mobile.Pages.ServiceRecordMainPage"
             Title="Service Records">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Service Records" Style="{StaticResource InnerPageHeading}"/>

            <StackLayout>
                
                <Button
                    Style="{StaticResource AddButton}"
                />
                <Label Text="Saved Records:" Style="{StaticResource ListViewHeading}"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>